doctype html
html(ng-app='ane')
    head
        title QuickBot API and Control
        meta(charset='utf-8')
        base(href='/')

        link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel="stylesheet")
        link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css", rel="stylesheet")
        script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.min.js')

        script(src='ane/modules-aggregated.js')

    body
        .navbar.navbar-default(role='navigation')
            .navbar-header
                a.navbar-brand(ng-href='/') QuickBot API and Control

            .collapse.navbar-collapse
                ul.nav.navbar-nav
                    li(ng-class='{"active": location == ""}')
                        a(href='/')
                    li(ng-class='{"active": location == "motors"}')
                        a(ui-sref='motors') Motors Demo

        .container(ui-view)
